@{
    ViewData["Title"] = "LeetSpeak Converter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row col-12 mt-5">
    <h4 class="text-center">Translate Text to LeetSpeak</h4>
    <div class="col-4 mt-2"></div>
    <div class="col-4 bg-primary mt-3" style="height: 30vh; border-radius: 7px;">
        <form class="col-12 mt-3" method="post" action="/Translate/Translate">
            <div class="form-group col-12 fw-bold">
                <label for="inputText">Input Text</label>
                <input type="text" class="form-control mt-2" id="inputText" name="inputText" required placeholder="Enter text to translate">
            </div>
            <div class="row">
                <div class="col-3"></div>
                <div class="col-6 mt-3">
                    <button type="submit" id="translateButton" class="btn btn-secondary w-100">Translate</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <!-- Display the translation result -->
    <div id="translationResult">
        <!-- Add a placeholder for error messages -->
        <div id="errorMessage" class="text-danger"></div>
    </div>
</div>

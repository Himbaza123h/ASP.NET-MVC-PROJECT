@model IEnumerable<ApiTranslateASP.NETWEB.Models.Translation>
@{
    ViewData["Title"] = "LeetSpeak Converter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <h4 class="text-center">Translate Text to LeetSpeak</h4>
    <div class="row justify-content-center mt-2">
        <div class="col-12 col-sm-8 col-md-6 mt-3 bg-dark p-4 rounded">
            <form class="mt-3" method="post" action="/Translate/Translate">
                <div class="form-group">
                    <label for="inputText" class="text-white" style="font-family: 'Arial', sans-serif; font-size: 18px; margin-bottom: 10px;">Enter Text to Translate</label>
                    <input type="text" class="form-control" id="inputText" name="inputText" required placeholder="Enter text to translate">
                </div>
                <div class="row justify-content-center mt-3">
                    <div class="col-12 col-md-6">
                        <button type="submit" id="translateButton" class="btn btn-secondary btn-block w-100 text-center">
                            Translate
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<div class="position-fixed top-0 start-0" style="z-index: 9999;">
    <div id="toastContainer" style="width: 200px;">
        @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
        {
            <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <strong class="me-auto">Success</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    @ViewBag.SuccessMessage
                </div>
            </div>
        }
    </div>
</div>


<!-- Add JavaScript to hide the success message after a timeout -->
<script>

$(document).ready(function () {
// Check if the success message exists
 var toastContainer = $("#toastContainer");
 if (toastContainer.length > 0) {
  setTimeout(function () {
toastContainer.find(".toast").fadeOut("slow");
 }, 3000);
  }
    });</script>
